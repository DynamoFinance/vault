#
# To pre-launch your snapshot of Ethereum main net using hardhat update the environment variable
# for your Alchemy API then run: `source source_me` in your shell. 
#

if [[ -z "$WEB3_ETHEREUM_MAINNET_ALCHEMY_API_KEY" ]]; then
   echo "Please enter your Alchemy API Key: "
   read key_input 

   export WEB3_ETHEREUM_MAINNET_ALCHEMY_API_KEY=$key_input
fi


npx hardhat   node   --fork https://eth-mainnet.alchemyapi.io/v2/$WEB3_ETHEREUM_MAINNET_ALCHEMY_API_KEY --fork-block-number 15936703 | tee rpc_output.txt &


